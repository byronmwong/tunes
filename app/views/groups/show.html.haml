%h1
  = "Group #{@group.id}: #{@group.name}"

- if @group.owner != current_user
  %div.membership-control
    = render "join_form"

%div
  %b
    Owner:
  = @group.owner.email

- if @group.owner == current_user
  %div
    = render "delete_group"

%div
  %b
    members:
  %ul
  - @group.members.each do |member|
    %li
      = link_to member.email, user_path(member)
