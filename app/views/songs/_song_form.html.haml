= form_for(@song) do |f|
  = #render error messages
  = f.label       :title
  = f.text_field  :title, placeholder: 'Wheels on the Bus'
  
  = f.label       :artist
  = f.text_field  :artist, placeholder: 'Raffi'
  = form_tag do
    = label_tag 'URL'
    = text_field_tag 'url', nil,  placeholder: 'www.youtube.com/something'
    = f.submit 'Add Song'