= form_for(@song) do |f|
  = #render error messages
  = f.label       :title
  = f.text_field  :title, placeholder: 'Wheels on the Bus'

  = f.label       :artist
  = f.text_field  :artist, placeholder: 'Raffi'

  = label_tag 'type'
  = text_field_tag 'sound[sound_type]', nil,  placeholder: 'youtube'

  = label_tag 'location'
  = text_field_tag 'sound[location]', nil,  placeholder: 'xHsmcdkh'

  = f.submit 'Add Song'
